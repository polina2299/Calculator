<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.calculator.MainActivity">

    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="number1"
            android:ems="10"
            android:id="@+id/editText3" tools:layout_constraintTop_creator="1" android:layout_marginStart="2dp"
            android:layout_marginTop="3dp" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="number2"
            android:ems="10"
            android:id="@+id/editText5" tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="6dp" app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="3dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:onClick="onClickAdd"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/button9" android:layout_marginStart="43dp"
            tools:layout_constraintLeft_creator="1" android:layout_marginBottom="52dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:onClick="onClickSub"
            tools:layout_constraintRight_creator="1" tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/button10" app:layout_constraintRight_toRightOf="@+id/button10"
            tools:layout_constraintLeft_creator="1" android:layout_marginBottom="52dp"
            app:layout_constraintLeft_toLeftOf="@+id/button10"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:onClick="onClickMult"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toBottomOf="@+id/button10"
            app:layout_constraintRight_toRightOf="@+id/button7" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/button7" app:layout_constraintTop_toTopOf="@+id/button10"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            android:onClick="onClickDiv"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="68dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="179dp"/>
    <TextView
            android:text="result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintRight_toLeftOf="@+id/button10"
            tools:layout_constraintRight_creator="1" tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="18dp"
            android:layout_marginBottom="90dp"/>
</android.support.constraint.ConstraintLayout>
